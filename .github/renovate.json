{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommitsDisabled",
    "schedule:monthly"
  ],
  "regexManagers": [
    {
      "fileMatch": ["tools/check-typos.sh"],
      "matchStrings": ["TYPOS_VERSION=(?<currentValue>.*?)\n"],
      "depNameTemplate": "crate-ci/typos",
      "datasourceTemplate": "github-releases"
    }
  ],
  "rebaseWhen": "conflicted",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^api-documentation.md$"],
      "matchStrings": ["com\\.intellectualsites\\.bom:bom-newest:(?<currentValue>.*?)\\\"", "<version>(?<currentValue>.*?)<\\/version>"],
      "depName": "com.intellectualsites.bom:bom-newest",
      "datasourceTemplate": "maven"
    }
  ]
}
